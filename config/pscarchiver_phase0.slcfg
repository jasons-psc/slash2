#		nodes	= sense2|sense2-ib;
		fsroot	= /store;
	}

	resource sense3 {
		desc	= "disk-based archiver";
		type	= standalone_fs;
		id	= 13;
#		nodes	= sense3|sense3-ib;
		fsroot	= /store;
	}

	resource sense4 {
		desc	= "disk-based archiver";
		type	= standalone_fs;
		id	= 14;
#		nodes	= sense4|sense4-ib;
		fsroot	= /store;
	}

	resource sense5 {
		desc	= "disk-based archiver";
		type	= standalone_fs;
		id	= 15;
#		nodes	= sense5|sense5-ib;
