# Pull in other/local config files
# include "/etc/slash/*.slcfg"

site @PSCARCH {
	site_desc	= "PSC archiver";
	site_id		= 0;
	resource archmds {
		desc	= "PSC archiver MDS";
		type	= mds;
		id	= 1;
		nodes	= peel0-ib.pvt|peel0;
#		nodes	= illusion1|illusion1-ib;
		jrnldev	= /dev/sdah;
	}

	resource peel0 {
		desc	= "PSC test I/O node";
		type	= standalone_fs;
		id	= 2;
		nodes	= peel0-ib2.pvt;
		fsroot	= /local/s2io;
	}

	resource lime {
		desc	= "PSC test I/O node";
		type	= standalone_fs;
		id	= 3;
		nodes	= lime|lime-ib;
		fsroot	= /local/p0_archive_backfs;
	}

	resource onager {
		desc	= "PSC test I/O node";
		type	= standalone_fs;
		id	= 10;
		nodes	= sense0;
		fsroot	= /store;
	}

	resource uo {
		desc	= "tape archiver";
		type	= archival_fs;
		id	= 4;
		nodes	= tahini;
		fsroot	= /usr/uo;
	}

	resource ue {
		desc	= "tape archiver";
		type	= archival_fs;
		id	= 5;
		nodes	= tahini-hsm;
		fsroot	= /usr/uo;
	}

	resource sense0 {
		desc	= "disk-based archiver";
		type	= standalone_fs;
		id	= 10;
		nodes	= sense0; # |sense0-ib
		fsroot	= /store;
	}

	resource sense1 {
		desc	= "disk-based archiver";
		type	= standalone_fs;
		id	= 11;
		nodes	= sense1; # |sense0-ib
		fsroot	= /store;
	}

	resource sense2 {
		desc	= "disk-based archiver";
		type	= standalone_fs;
