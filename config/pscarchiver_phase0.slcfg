# Archiver configuration
set net="10.10.101@sdp11, 0@tcp12";
set port=1301;
set pref_mds="archmds@PSCARCH";
set pref_ios="peel0@PSCARCH";
#set pref_ios="
#	sense0@PSCARCH,
#	sense1@PSCARCH,
#	sense2@PSCARCH,
