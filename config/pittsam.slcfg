	resource io {
		type	= cluster_noshare_lfs;
		id	= 100;
		ios	= sense51s0, sense51s1, sense51s2, sense51s3,
			  sense51s4, sense51s5, sense51s6,
			  dxcsbb3s0, dxcsbb3s1, dxcsbb3s2, dxcsbb3s3,
			  dxcsbb3s4, dxcsbb3s5, dxcsbb3s6, dxcsbb3s7;
