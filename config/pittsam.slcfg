	resource dxcsbb3s1 { type = standalone_fs; id = 21; nids = dxcsbb03-io1.psc.edu; fsroot = /sbb3_pool1/slio; self_test = "fshealthtest -u 90 %r"; }
	resource dxcsbb3s2 { type = standalone_fs; id = 22; nids = dxcsbb03-io2.psc.edu; fsroot = /sbb3_pool2/slio; self_test = "fshealthtest -u 90 %r"; }
