	resource sense {
		desc	= "disk-based archiver cluster";
		type	= cluster_noshare_lfs;
		id	= 0x1fff;
		ios	= sense0s0@PSCARCH,
			  sense0s1@PSCARCH,
			  sense0s2@PSCARCH,
			  sense0s3@PSCARCH,
			  sense0s4@PSCARCH,
			  sense0s5@PSCARCH,
			  sense0s6@PSCARCH,
			  sense1s0@PSCARCH,
			  sense1s1@PSCARCH,
			  sense1s2@PSCARCH,
			  sense1s3@PSCARCH,
			  sense1s4@PSCARCH,
