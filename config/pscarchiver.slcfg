	resource sense1s4 { desc = "disk-based archiver unit 1 sliod 4";	type = standalone_fs; id = 0x1104; nids = sense1-sliod4; fsroot = /arc_sliod/4; }
	resource sense1s5 { desc = "disk-based archiver unit 1 sliod 5";	type = standalone_fs; id = 0x1105; nids = sense1-sliod5; fsroot = /arc_sliod/5; }

